{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "JwtTokenDefaults": {
    "ValidAudience": "https//localhost",
    "ValidIssuer": "https//localhost",
    "Key": "Case352354**Case352354**JWTSecretKey123!",
    "Expire": 60
  },
  "ReverseProxy": {
    "Routes": {
      "productsRoute": {
        "ClusterId": "productsCluster",
        "Match": {
          "Path": "/products/{**catch-all}"
        },
        "AuthorizationPolicy": "AuthenticatedUser",
        "Transforms": [
          { "PathPattern": "{**catch-all}" }
        ]
      },
      "usersRoute": {
        "ClusterId": "usersCluster",
        "Match": {
          "Path": "/users/{**catch-all}"
        },
        "AuthorizationPolicy": "AuthenticatedUser",
        "Transforms": [
          { "PathPattern": "{**catch-all}" }
        ]
      },
      "loginRoute": {
        "ClusterId": "loginCluster",
        "Match": {
          "Path": "/login/{**catch-all}"
        },
        "AuthorizationPolicy": "AllowAnonymous", // ðŸ‘ˆ BURAYI DÃœZELT
        "Transforms": [
          { "PathPattern": "{**catch-all}" }
        ]
      }
    },
    "Clusters": {
      "productsCluster": {
        "Destinations": {
          "productsApi": {
            "Address": "https://localhost:7270/"
          }
        }
      },
      "usersCluster": {
        "Destinations": {
          "usersApi": {
            "Address": "https://localhost:5281/"
          }
        }
      },
      "loginCluster": {
        "Destinations": {
          "loginApi": {
            "Address": "http://localhost:5114/"
          }
        }
      }
    }
  }
}